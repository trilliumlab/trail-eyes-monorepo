{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "allowJs": false,
    "jsx": "preserve",
    "composite": true,
    "incremental": true
  },
  "references": [
    { "path": "../../apps/auth" },
    { "path": "../../apps/backend" },
    { "path": "../../apps/panel" },
    { "path": "../../apps/scripts" },
    { "path": "../../packages/backend-api" },
    { "path": "../../packages/database" },
    { "path": "../../packages/email" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/util" }
  ]
}
