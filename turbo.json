{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DB_*", "SMTP_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },

    "db:generate": {
      "persistent": true,
      "inputs": ["drizzle.config.ts", "src/**", ".env"],
      "outputs": ["drizzle/**"]
    },
    "db:migrate": {
      "persistent": true,
      "inputs": ["drizzle/**", "drizzle.config.ts", ".env"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:drizzle-kit": {
      "cache": false,
      "interactive": true,
      "persistent": true
    },

    "scripts#db:import-routes": {
      "cache": false,
      "env": ["CMD_WD"],
      "inputs": ["../../data/routes/**", "src/**"]
    },
    "scripts#build-sprites": {
      "inputs": [
        "../../data/sprites/dark",
        "../../data/sprites/light",
        "../../data/sprites/sdf",
        "src/**"
      ],
      "outputs": ["../../data/sprites/out/**"]
    }
  }
}
