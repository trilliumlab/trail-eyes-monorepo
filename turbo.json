{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build-sprites": {
      "inputs": ["../../data/sprites/dark", "../../data/sprites/light", "src/**"],
      "outputs": ["../../data/sprites/**"]
    }
  }
}
