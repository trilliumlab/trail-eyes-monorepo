{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NEXT_PUBLIC_BACKEND_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "scripts#build-sprites": {
      "inputs": [
        "../../data/sprites/dark",
        "../../data/sprites/light",
        "../../data/sprites/sdf",
        "src/**"
      ],
      "outputs": ["../../data/sprites/out/**"]
    }
  }
}
