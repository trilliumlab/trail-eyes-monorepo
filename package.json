{
  "name": "trail-eyes-monorepo",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev",

    "db:generate": "dotenv -- turbo db:generate",
    "db:migrate": "dotenv -- turbo db:migrate",
    "db:studio": "dotenv -- turbo db:studio",
    "db:import-routes": "dotenv -- turbo db:import-routes",

    "build-sprites": "dotenv -- turbo build-sprites",

    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "lint:fix": "biome lint --write .",
    "format:fix": "biome format --write .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "turbo": "^2.0.14",
    "typescript": "^5.4.5",
    "dotenv-cli": "^7.4.2"
  },
  "overrides": {
    "@sinclair/typebox": "^0.33.7"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.22",
  "workspaces": ["apps/*", "packages/*"]
}
