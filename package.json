{
  "name": "trail-eyes-monorepo",
  "version": "0.0.1",
  "description": "Elysia Backend + React Native + Next.js",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently -n 'backend,panel' -c '#007755,#550077,#2f6da3' 'cd apps/backend && bun dev' 'cd apps/panel-old && bun --bun run dev'",
    "typecheck": "bunx --bun tsc",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "concurrently": "^6.2.0"
  }
}
